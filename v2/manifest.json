{
  "name": "Stop AutoPlay Next for YouTubeâ„¢",
  "description": "Stop YouTube from Playing next tracks (aka disable autoplay button)",
  "author": "James Fray",
  "version": "0.2.2",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.ytimg.com/yts/jsbin/*",
    "*://www.youtube.com/yts/jsbin/*",
    "*://www.youtube.com/s/player/*",
    "*://www.youtube.com/s/desktop/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.youtube.com/*"
    ],
    "js": ["data/inject.js"],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "homepage_url": "https://add0n.com/stop-autoplay.html",
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  }
}
